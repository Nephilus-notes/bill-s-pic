{% extends './layout.html' %}

{% block title %}{{ pokemon.name.title() }}{% endblock title%}

{% block content %}
<h1>Pokemon</h1>



<div class="card">
<div class="card-body">
    <h3 class="card-title">{{ pokemon.name.title() }}</h3>
    <p><small></small></p>
    {% if pokemon.id < 650 %}
    <td> <img class="pokedex_img" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/dream-world/{{pokemon.id}}.svg"></td>
      {% else%}
        <img class="pokedex_img" src="{{ pokemon.reg_sprite }}", height="300">
{% endif %}

    <p><strong>Type</strong>: {{ pokemon.type1 }}</p>
    {% if pokemon.type2 %}
    <p><strong>Type 2</strong>: {{ pokemon.type2 }}</p>
    {% endif %}
    <p><strong>Ability</strong>: {{ pokemon.ability1 }}</p>
 {% if pokemon.ability2 %}
    <p><strong>Ability</strong>: {{ pokemon.ability2 }}</p>
 {% if pokemon.type3 %}
    <p><strong>Ability</strong>: {{ pokemon.ability3 }}</p>
{% endif %}
{% endif %}
</div>
<div class="card-footer">
    Pokemon ID: {{ pokemon.id}}
</div>

</div>

{% endblock content %}